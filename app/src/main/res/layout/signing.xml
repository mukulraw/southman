<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="100dp"
                android:weightSum="2"
                android:baselineAligned="false">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:gravity="end">


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        app:cardUseCompatPadding="true">


                        <RelativeLayout
                            android:layout_width="80dp"
                            android:layout_height="80dp">


                            <Button
                                android:id="@+id/male"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@drawable/pink"
                                android:typeface="monospace"
                                android:drawableTop="@drawable/ic_mu"
                                android:paddingTop="10dp"
                                android:text="Male" />


                            <Button
                                android:id="@+id/whitemale"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@drawable/ppinkk"
                                android:typeface="monospace"
                                android:visibility="gone"
                                android:drawableTop="@drawable/whitemale"
                                android:paddingTop="10dp"
                                android:textColor="#fff"
                                android:text="Male" />



                        </RelativeLayout>





                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:gravity="start">


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardUseCompatPadding="true">


                        <RelativeLayout
                            android:layout_width="80dp"
                            android:layout_height="80dp">



                            <Button
                                android:id="@+id/famale"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:typeface="monospace"
                                android:background="@drawable/pink"
                                android:drawableTop="@drawable/ic_paa"
                                android:paddingTop="10dp"
                                android:text="Female" />

                            <Button
                                android:id="@+id/whitefemale"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:typeface="monospace"
                                android:visibility="gone"
                                android:background="@drawable/ppinkk"
                                android:drawableTop="@drawable/whitefemale"
                                android:paddingTop="10dp"
                                android:textColor="#fff"
                                android:text="Female" />

                        </RelativeLayout>



                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="Usrename"
                android:typeface="monospace"
                android:textColor="#000" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:hint="tap enter to username"
                android:importantForAutofill="no" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:typeface="monospace"
                android:text="Email"
                android:textColor="#000" />


            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:inputType="textEmailAddress"
                android:hint="tap enter to email"
                android:importantForAutofill="no" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:typeface="monospace"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="Password"
                android:textColor="#000" />


            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:hint="tap enter to password"
                android:importantForAutofill="no" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Age"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:typeface="monospace"
                android:textColor="#000" />


            <EditText
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:inputType="phone"
                android:layout_marginEnd="10dp"
                android:hint="tap enter to age"
                android:importantForAutofill="no" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:typeface="monospace"
                android:text="Mobile"
                android:textColor="#000" />


            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:inputType="phone"
                android:hint="tap enter to mobile"
                android:importantForAutofill="no" />


            <Button
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/green_back_round"
                android:gravity="center"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="10dp"
                android:paddingStart="25dp"
                android:paddingTop="7dp"
                android:paddingEnd="25dp"
                android:textSize="18sp"
                android:paddingBottom="7dp"
                android:text="Signup"
                android:textColor="#fff" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="18dp"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="have an ccount ? "
                    android:typeface="monospace"/>

                <TextView
                    android:id="@+id/login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="login"
                    android:typeface="monospace"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />
            </LinearLayout>





        </LinearLayout>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:id="@+id/back"
            android:src="@drawable/arr"
            android:contentDescription="TODO" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical">






        </LinearLayout>


        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

    </RelativeLayout>


</androidx.core.widget.NestedScrollView>