<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="270dp"
    android:background="#f5f5f5"
    android:animateLayoutChanges="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CREATE ORDER"
                android:id="@+id/create"
                android:background="@drawable/green_back_round"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 500 Rs. 200"
                android:id="@+id/bill_amount"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_alignParentEnd="true"
                android:drawableEnd="@drawable/arrowleft"
                android:text="Current Order"
                android:textColor="#000000"
                android:id="@+id/current"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="8dp"
                />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hide"
            android:visibility="gone"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:id="@+id/tid"
                android:text="TXN ID - 64684646464"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/holo_blue_dark"
                android:gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:id="@+id/status"
                android:text="pending"
                android:paddingEnd="8dp"
                android:textColor="@color/colorAccent"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/layout"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:id="@+id/cash_discount"
                android:text="Cash discount - Rs. 100"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/scratch_card"
                android:text="Scratch discount - Rs. 100"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="5dp"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:id="@+id/bill"
                android:text="Total Bill - Rs. 100"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/balance"
                android:text="Balance Pay - Rs. 100"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="8dp"
                />

        </RelativeLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DELETE ORDER"
                android:id="@+id/cancel"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/whitebutton"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONFIRM AND PAY"
                android:id="@+id/ok"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/background_color"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                />

        </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>