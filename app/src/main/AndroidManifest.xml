<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sc.bigboss.bigboss">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="com.sc.bigboss.bigboss.Bean"
        android:allowBackup="true"
        android:icon="@drawable/man"
        android:label="@string/app_name"
        android:roundIcon="@drawable/man"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.sc.bigboss.bigboss.Perks"></activity>
        <activity android:name="com.sc.bigboss.bigboss.Winners" />
        <activity
            android:name="com.sc.bigboss.bigboss.AdActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sc.bigboss.bigboss.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.sc.bigboss.bigboss.SignUp"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sc.bigboss.bigboss.Forgot"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sc.bigboss.bigboss.ChangePAssword"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sc.bigboss.bigboss.Login"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sc.bigboss.bigboss.signupLogin"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sc.bigboss.bigboss.Location"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sc.bigboss.bigboss.CollerTshirt"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sc.bigboss.bigboss.MeansCategory"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sc.bigboss.bigboss.SingleProduct"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sc.bigboss.bigboss.Videoplayer"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sc.bigboss.bigboss.WristWatch"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sc.bigboss.bigboss.Playitem"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.sc.bigboss.bigboss.Notification"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sc.bigboss.bigboss.Search"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sc.bigboss.bigboss.MyProfile"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sc.bigboss.bigboss.MyOrder"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sc.bigboss.bigboss.WishList"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sc.bigboss.bigboss.Setting"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sc.bigboss.bigboss.EditProfile"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sc.bigboss.bigboss.SteamVideoPlayer"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sc.bigboss.bigboss.tab"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sc.bigboss.bigboss.ShopMens"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sc.bigboss.bigboss.ShopCollershirt"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sc.bigboss.bigboss.ShopSingleProduct"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sc.bigboss.bigboss.OneMenswear"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sc.bigboss.bigboss.Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sc.bigboss.bigboss.Sliders"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sc.bigboss.bigboss.Youtube"
            android:screenOrientation="portrait" />

        <service android:name="com.sc.bigboss.bigboss.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <!--
 Set custom default icon. This is used when no icon is set for incoming notification messages.
     See README(https://goo.gl/l4GJaQ) for more.
        -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/notification" />
        <!--
 Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more.
        -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />
    </application>

</manifest>